{
    "require": {
        "bdev/wp-toolkit-builder": "^1.0"
    },
    "autoload": {
        "classmap": [
            "inc/",
            "vendor-prefixed/"
        ]
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "mockery/mockery": "^1.4",
        "brain/monkey": "^2.6",
        "squizlabs/php_codesniffer": "^3.6",
        "phpstan/phpstan": "^1.8",
        "wp-coding-standards/wpcs": "^3.0",
        "phpstan/extension-installer": "^1.4",
        "szepeviktor/phpstan-wordpress": "^1.3"
    },
    "scripts": {
        "prefix-namespaces": [
            "sh -c 'test -f ./bin/strauss.phar || curl -o bin/strauss.phar -L -C - https://github.com/BrianHenryIE/strauss/releases/latest/download/strauss.phar'",
            "@php bin/strauss.phar",
            "@php composer dump-autoload"
        ],
        "post-update-cmd": [
            "@prefix-namespaces"
        ],
        "test": "phpunit",
        "lint": "phpcs --standard=.phpcs.xml src/",
        "analyse": "phpstan analyse src/",
        "post-install-cmd": [
            "cp -r 'hooks/' '.git/hooks/'",
            "php -r \"copy('hooks/pre-commit', '.git/hooks/pre-commit');\"",
            "php -r \"copy('hooks/pre-push', '.git/hooks/commit-msg');\"",
            "php -r \"chmod('.git/hooks/pre-commit', 0777);\"",
            "php -r \"chmod('.git/hooks/pre-push', 0777);\"",
            "@prefix-namespaces"
        ]
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true,
            "phpstan/extension-installer": true
        }
    },
    "extra": {
        "strauss": {
            "target_directory": "vendor-prefixed",
            "namespace_prefix": "{theme-namespace}\\",
            "classmap_prefix": "{theme-namespace}_",
            "constant_prefix": "{theme-namespace}_",
            "update_call_sites": true,
            "delete_vendor_packages": true
        }
    }
}